<table>
    name = histdata1
    <field>
        name    = ch0
        alias   = VoltageBattery
        title   = Battery Voltage
        byteofs = 1
        decpl   = 2
        type    = s16
        vscale  = 0.001
        units   = V
    </field>
</table>